{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "PortKiller",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "globalShortcut": {
        "all": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "center": true,
        "setFocus": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      "identifier": "com.portkiller.app",
      "longDescription": "The fastest way for developers to visualize and terminate processes locking specific ports",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["WebView2Loader.dll"],
      "shortDescription": "Port Process Killer Utility",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": null,
        "nsis": {
          "installerIcon": "icons/icon.ico",
          "headerImage": null,
          "sidebarImage": null,
          "license": null,
          "installMode": "currentUser",
          "languages": ["English"]
        },
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        },
        "wix": {
          "language": "en-US"
        }
      }
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "windows": [
      {
        "label": "main",
        "title": "PortKiller",
        "url": "index.html",
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "center": true,
        "width": 520,
        "height": 620,
        "resizable": false,
        "fullscreen": false,
        "focus": true
      }
    ]
  }
}
